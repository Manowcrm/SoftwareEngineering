extends layout

block content
  section.signup#signup
    .signup-container
      h2 Create Your Account
      p Join Study Buddies and connect with like-minded students.
      form(action="/signup_process", method="POST")
        if error
          p.error-message #{error}
        .form-group
          label(for="name") Full Name:
          input(type="text", id="name", name="name", placeholder="Enter your full name", aria-label="Full Name", required)
        .form-group
          label(for="email") Email:
          input(type="email", id="email", name="email", placeholder="Enter your email", aria-label="Email", required)
        .form-group
          label(for="password") Password:
          input(type="password", id="password", name="password", placeholder="Enter your password", aria-label="Password", required)
        .form-group
          label(for="confirm-password") Confirm Password:
          input(type="password", id="confirm-password", name="confirmPassword", placeholder="Confirm your password", aria-label="Confirm Password", required)
        .form-group
          label(for="interests") Study Interests:
          select(id="interests", name="interests", multiple, required)
            option(value="Math") Math
            option(value="Science") Science
            option(value="Literature") Literature
            option(value="History") History
            option(value="Programming") Programming
            option(value="Technology") Technology
            option(value="Business") Business
            option(value="Health") Health
        button.signup-btn(type="submit") Sign Up
        .form-group
          p Already have an account? 
          a(href="/login") Log in here
        p By signing up, you agree to our
        a(href="/terms") Terms of Service