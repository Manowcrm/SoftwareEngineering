extends layout

block content
  // Main Content
  main
    .hero
      .hero-content
        h1 Connect. Collaborate. Succeed.
        p Find your perfect study buddy and boost your academic success.
        a.btn(href="/signup") Get started
    .features
      h2 Our Features
      .feature-grid
        .feature
          img(src="/images/create_profile.png", alt="Create Profile")
          h3 Create Profile
          p Set up your profile with your academic interests and study preferences.
        .feature
          img(src="/images/buddy_matching.png", alt="Buddy Matching")
          h3 Buddy Matching
          p Find peers based on shared courses and study habits.
        .feature
          img(src="/images/chat_messaging.png", alt="Chat & Messaging")
          h3 Chat & Messaging
          p Communicate with your study buddies easily.
        .feature
          img(src="/images/schedule_sessions.png", alt="Schedule Sessions")
          h3 Schedule Sessions
          p Organize study sessions with your peers.